<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/drawable_group_holder_card"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/support_type"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="3dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/issue_category_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>



        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/support_type"
            android:id="@+id/ticket_id"
            android:text="Ticket ID: #TH889"
            android:paddingLeft="5dp"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>

        <TextView
            android:paddingLeft="5dp"
            android:layout_below="@id/ticket_id"
            android:layout_toRightOf="@id/support_type"
            android:text="29th September"
            android:id="@+id/time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>