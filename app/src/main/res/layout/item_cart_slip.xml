<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/package_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/common_google_signin_btn_icon_dark"/>

        <TextView
            android:layout_toLeftOf="@id/items_in_machine"
            android:layout_centerVertical="true"
            android:text="Qty: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/items_in_inventory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="0"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/items_in_machine"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="0"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <TextView
            android:layout_toRightOf="@id/package_image"
            android:id="@+id/name"
            android:text="Item Name"
            android:paddingLeft="5dp"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/item_loc"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/purchase_count"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/paid_icon"
            android:visibility="invisible"
            android:paddingLeft="5dp"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/package_image"
            android:layout_width="50dp"
            android:src="@drawable/ic_paid_icon"
            android:layout_height="20dp"/>

        <TextView
            android:paddingLeft="5dp"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/package_image"
            android:text="â‚¹ 10"
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/line_breaker"
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_marginTop="7pt"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dotted"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>