<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.mainActivity.fragments.shelf.ShelfFragment">

    <RelativeLayout
        android:id="@+id/shelf_empty_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/empty_gif"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:text="Your shelf if empty"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:src="@drawable/mail_gif"/>

        <TextView
            android:id="@+id/empty_shelf_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shelf Empty!"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="20pt"
            android:layout_below="@id/empty_gif"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/empty_shelf_text"
            android:layout_centerHorizontal="true"
            android:textSize="13dp"
            android:layout_marginTop="5pt"
            android:text="Once you purchase items,\nyou'll see them here"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shelf_items"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:overScrollMode="never"/>

</FrameLayout>