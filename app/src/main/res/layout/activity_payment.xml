<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.paymentActivity.PaymentActivity">

    <!-- region Payment Fragments -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/promotion_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="25pt"
            android:layout_alignParentTop="true"/>

        <FrameLayout
            android:id="@+id/cart_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/promotion_fragment_container"
            android:layout_above="@id/payment_method_fragment_container"/>

        <FrameLayout
            android:id="@+id/payment_method_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/payment_status_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"/>

    <!--    endregion-->

</androidx.constraintlayout.widget.ConstraintLayout>