<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="group_holder"
            type="com.xborg.vendx.database.ItemGroup" />
    </data>

        <RelativeLayout
            android:background="@drawable/drawable_group_holder_card"
            android:id="@+id/card_view"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="#fff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="Title"
                    android:background="@drawable/drawable_group_holder_title"
                    android:id="@+id/title"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <RelativeLayout
                    android:visibility="invisible"
                    android:id="@+id/no_machines_near_message"
                    android:layout_marginVertical="50dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/message_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="No machines\nnear you"/>

                    <Button
                        android:text="Refresh"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_button_accent"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/message_text"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"/>

                </RelativeLayout>


                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_below="@id/title"
                    android:layout_marginTop="2pt"
                    android:id="@+id/rv_item_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical" />

                <ImageView
                    android:id="@+id/line_breaker"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="7pt"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/dotted"
                    android:layout_below="@id/rv_item_group" />

            </RelativeLayout>

        </RelativeLayout>
</layout>
