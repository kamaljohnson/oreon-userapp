<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.vendingActivity.fragments.communicators.server.ServerCommunicatorFragment">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_alignParentLeft="true"
            android:id="@+id/to_server_text"
            android:layout_toLeftOf="@id/send_to_server_button"
            android:layout_width="wrap_content"
            android:hint="Text to server"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/send_to_server_button"
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="50dp"/>

    </RelativeLayout>

</FrameLayout>