<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.33"
    style="?android:attr/ambientShadowAlpha"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:translationZ="4dp"
    android:background="@drawable/rounded_white_button">

    <RelativeLayout
        android:id="@+id/card_top"
        android:layout_height="30pt"
        android:layout_centerHorizontal="true"
        android:layout_width="60pt">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/common_google_signin_btn_icon_dark">

        </ImageView>

        <TextView
            android:id="@+id/item_limit"
            android:layout_width="10pt"
            android:layout_height="10pt"
            android:text="0"
            android:textSize="6pt"
            android:textColor="@color/white"
            android:layout_marginLeft="2pt"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/item_limit_count"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">
        </TextView>

        <TextView
            android:id="@+id/purchase_count"
            android:layout_width="10pt"
            android:layout_height="10pt"
             android:text="0"
            android:textSize="6pt"
            android:textColor="@color/white"
            android:layout_margin="2pt"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/item_count_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="60pt"
        android:layout_height="30pt"
        android:layout_below="@id/card_top">

        <TextView
            android:paddingTop="5pt"
            android:id="@+id/cost"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:visibility="visible"
            android:text="â‚¹10"
            android:textSize="7pt"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cost"
             android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:paddingLeft="8dp"
            android:text="Item Name"
            android:textSize="5pt">

        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/remove_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="0pt"
                android:padding="5dp"
                android:background="@drawable/remove_button_background"
                android:src="@drawable/remove_icon">

            </ImageView>

        </RelativeLayout>

    </RelativeLayout>


    <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

    </TextView>

</RelativeLayout>