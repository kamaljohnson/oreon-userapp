<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.33"
    style="?android:attr/ambientShadowAlpha"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:translationZ="4dp"
    android:background="@drawable/rounded_white_button">

    <RelativeLayout
        android:id="@+id/card_top"
        android:layout_height="130dp"
        android:layout_width="120dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/common_google_signin_btn_icon_dark">

        </ImageView>

        <ImageView
            android:id="@+id/info_button"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="3dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:src="@drawable/info_icon"
            android:textStyle="bold">

        </ImageView>

        <TextView
            android:id="@+id/purchase_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="0"
            android:paddingHorizontal="3dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/item_count_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_top">

        <TextView
            android:id="@+id/item_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingHorizontal="4dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:textAlignment="center"
            android:background="@drawable/item_limit_count"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/cost"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:visibility="visible"
            android:text="â‚¹10"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cost"
             android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:paddingLeft="5dp"
            android:text="Item Name"
            android:textSize="15dp">

        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

<!--            <ImageView-->
<!--                android:id="@+id/add_button"-->
<!--                android:background="@drawable/add_button_background"-->
<!--                android:layout_width="35dp"-->
<!--                android:layout_height="18dp"-->
<!--                style="?android:attr/borderlessButtonStyle"-->
<!--                android:layout_alignParentTop="true"-->
<!--                android:src="@drawable/add_icon"-->
<!--                android:layout_marginTop="7dp">-->

<!--            </ImageView>-->

            <ImageView
                android:id="@+id/remove_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_margin="3dp"
                android:background="@drawable/remove_button_background"
                android:src="@drawable/remove_icon">

            </ImageView>

        </RelativeLayout>

    </RelativeLayout>


    <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

    </TextView>

</RelativeLayout>