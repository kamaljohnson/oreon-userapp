<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name = "item"
            type="com.xborg.vendx.database.Item"/>
    </data>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        style="?android:attr/ambientShadowAlpha"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/drawable_item_card">

        <RelativeLayout
            android:id="@+id/card_top"
            android:layout_height="40pt"
            android:layout_centerHorizontal="true"
            android:layout_width="60pt">

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/common_google_signin_btn_icon_dark"/>

            <TextView
                android:id="@+id/items_in_shelf"
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:text="0"
                android:textSize="6pt"
                android:textColor="@color/white"
                android:layout_marginLeft="2pt"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/item_limit_count"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/purchase_count"
                android:layout_width="wrap_content"
                android:layout_height="10pt"
                android:text="0/10"
                android:padding="2dp"
                android:textSize="5pt"
                android:textColor="@color/white"
                android:layout_margin="2pt"
                android:gravity="center"
                android:textStyle="bold"

                android:background="@drawable/item_count_background"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60pt"
            android:layout_height="20pt"
            android:layout_below="@id/card_top">

            <TextView
                android:paddingTop="2pt"
                android:id="@+id/cost"
                android:layout_width="40pt"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:visibility="visible"
                android:text="â‚¹10"
                android:textSize="7pt" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/name"
                android:layout_width="50pt"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cost"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:paddingLeft="8dp"
                android:text="Item Name"
                android:textSize="6pt">
            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/remove_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:padding="4dp"
                    android:src="@drawable/remove_icon"/>

            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/item_loc"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/items_in_machine"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="0dp"/>


    </RelativeLayout>
</layout>