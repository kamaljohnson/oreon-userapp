<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.mainActivity.fragments.explore.ExploreFragment">
    <RelativeLayout
        android:id="@+id/sliding_layer_top"
        android:layout_width="match_parent"
        android:layout_height="20pt">
        <ImageView
            android:id="@+id/top_dash"
            android:layout_marginVertical="3pt"
            android:layout_centerHorizontal="true"
            android:background="@drawable/drawable_explorer_top_dash"
            android:layout_width="20pt"
            android:layout_height="1pt"/>
        <TextView
            android:id="@+id/selected_machine_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_dash"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Explore?"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_1"
        android:layout_below="@+id/sliding_layer_top"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_machine_cards"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@id/image_1">

        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.xborg.vendx.activities.mainActivity.MainActivity" />
        <!-- Transparent View -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</RelativeLayout>